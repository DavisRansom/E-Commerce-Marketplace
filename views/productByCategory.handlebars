<h2>{{serializedData.category_name}}s</h2>
<div class="container-fluid d-flex flex-row flex-wrap justify-content-around" id="card-container">
{{#each serializedData.products}}
<div class="card mb-3" style="width: 18rem;">
  <img src="{{product_img}}" class="card-img-top" alt="{{alt}}" id="small-product">
  <div class="card-body">
    <h5 class="card-title"><a href="/api/products/{{id}}">{{product_name}}</a></h5>
    <p>
      <span for="img" aria-label="money">ðŸ’²</span>
      <!-- Pass needed_funding value to the helper function -->
      <span class="dollar-amount">{{format_amount price}}</span>
    </p>
    <p class="card-text">Stock: {{stock}}</p>
    <a class="btn btn-block btn-primary add-to-cart" data-id="{{id}}">Add To Cart</a>
  </div>
</div>
{{/each}}
</div>
<script src="../../js/addToCart.js"></script>