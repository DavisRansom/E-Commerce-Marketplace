<div class="container">
    <h1>Checkout Page</h1> 
    <table class="table table-striped">
    <thead>
        <tr>
        <th scope="col">Product</th>
        <th scope="col">Price</th>
        <th scope="col">Quantity</th>
        </tr>
    </thead>
    <tbody>
        {{#each cartProducts}}
        <tr>
        <th scope="row">{{product_name}}</th>
        <td>{{format_amount price}}</td>
        
        <td>
            <input class="form-input text-center" type="number" id="product-quantity" name="product-quantity"/>
        </td>
        {{/each}}
        </tr>
    </tbody>
    </table>
        <p>Total: </p><span for="img" aria-label="money">ðŸ’²</span><span class="dollar-amount">{{format_amount total-price}}</span>
    <div class="form-group">
        <button class="btn btn-primary" id='checkout-btn' type="submit">Proceed to Checkout</button>
    </div>
</div>

<script src="/js/checkout.js"></script>
