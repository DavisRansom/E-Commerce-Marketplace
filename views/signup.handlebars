<div class="middle">
<div class="col-md-6">
    <h2>Signup</h2>

    <form class="form signup-form">
      <div class="form-group">
        <label for="name-signup">Name:</label>
        <input class="form-input" type="text" id="name-signup" />
      </div>
      <div class="form-group">
        <label for="address-signup">Address:</label>
        <input class="form-input" type="text" id="address-signup" />
      </div>
      <div class="form-group">
        <label for="phone_number-signup">Phone number:</label>
        <input class="form-input" type="text" id="phone_number-signup" />
      </div>
      <div class="form-group">
        <label for="email-signup">Email:</label>
        <input class="form-input" type="text" id="email-signup" />
      </div>
      <div class="form-group">
        <label for="password-signup">Password:</label>
        <input class="form-input" type="password" id="password-signup" />
      </div>

      <div class="form-group">
        <label for="isAdmin-signup">Are you a seller?
        <input class="form-input larger" type="checkbox" id="isAdmin" />
        </label>
      </div>
      
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Sign-up</button>
      </div>
      
    </form>
  </div>
</div>
<script src="/js/signup.js"></script>