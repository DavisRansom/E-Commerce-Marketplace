<section class="row col-12 justify-content-center">
  <div class="col-12 col-md-10 col-lg-6">
    <h2>Signup</h2>

    <form class="form signup-form bg-dark text-light my-4 p-4 rounded">
      <div class="form-group">
        <label for="name-signup">Name:</label>
        <input class="form-input" type="text" id="name-signup" />
      </div>
      <div class="form-group">
        <label for="address-signup">Address:</label>
        <input class="form-input" type="text" id="address-signup" />
      </div>
      <div class="form-group">
        <label for="phone_number-signup">Phone number:</label>
        <input class="form-input" type="text" id="phone_number-signup" />
      </div>
      <div class="form-group">
        <label for="email-signup">Email:</label>
        <input class="form-input" type="text" id="email-signup" />
      </div>
      <div class="form-group">
        <label for="password-signup">Password:</label>
        <input class="form-input" type="password" id="password-signup" />
      </div>

      <div class="form-group">
        <div class="form-check">
        <label for="form-check-label isAdmin-signup">Are you a seller?
        <input class="form-check-input" type="checkbox" id="isAdmin" />
        </label>
        </div>
      </div>
      
      <div class="form-group">
        <button class="btn btn-block btn-success" type="submit">Sign-up</button>
      </div>
      
    </form>
  </div>
</section>
<script src="/js/signup.js"></script>