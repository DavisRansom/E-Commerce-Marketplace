<div class="row">
<div class="col-md-6">
    <h2>Signup</h2>

    <form class="form signup-form">
      <div class="form-group">
        <label for="name-signup">name:</label>
        <input class="form-input" type="text" id="name-signup" />
      </div>
      <div class="form-group">
        <label for="address-signup">address:</label>
        <input class="form-input" type="text" id="address-signup" />
      </div>
      <div class="form-group">
        <label for="phone_number-signup">phone number:</label>
        <input class="form-input" type="text" id="phone_number-signup" />
      </div>
      <div class="form-group">
        <label for="email-signup">email:</label>
        <input class="form-input" type="text" id="email-signup" />
      </div>
      <div class="form-group">
        <label for="password-signup">password:</label>
        <input class="form-input" type="password" id="password-signup" />
      </div>
      <div class="form-group">
        <label for="isAdmin-signup">Are you a seller?</label>
        <input class="form-input" type="checkbox" id="isAdmin-signup" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">signup</button>
      </div>
      
    </form>
  </div>
</div>
